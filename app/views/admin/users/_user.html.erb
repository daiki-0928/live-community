<div class="text-center mt-5 mb-5">
  <h3 class="heading col-10 col-md-4 col-xl-3">ユーザー一覧</h3>
  <div class="flame container mt-5 mb-5">
    <div class="form-group">
      <%= search_form_for [:admin,@q] do |f| %>
      <div class="row form-group justify-content-center">
        <div class="search_form col-9 col-md-5 col-xl-4">
          <%= f.search_field :name_cont, placeholder: "ユーザー名検索", class: 'form-control' %>
        </div>
        <div class="form-width col-10 col-md-8 col-xl-6 text-center">
          <%= f.submit "検索", class: "btn btn-info ml-3 mb-1" %>
         </div>
      </div>
    </div>
      <% end %>
    <div class="row search_form">
      <%= sort_link(@q, :created_at, "古い順/新しい順") %>
    </div>

  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
      <table class="table">
        <thead class="bg-light">
          <tr>
            <th>会員ID</th>
            <th>名前</th>
            <th>年齢</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </th>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= link_to user.name, admin_user_path(user.id) %></td>
              <td><%= user.age_i18n %></td>
              <td><%= user.email %></td>
              <td>
                <% if user.is_deleted == false %>
              <div class="text-success">有効</div>
            <% else %>
              <div class="text-danger">退会</div>
            <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-1"></div>
  </div>
  <div class="row">
    <div class="mx-auto">
      <%#= paginate @users %>
    </div>
  </div>
</div>