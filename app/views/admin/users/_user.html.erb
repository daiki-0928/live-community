<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-md-auto mb-3 bg-light">
      <h3>ユーザー一覧</h3>
    </div>
    <div class="col-md-8">
    </div>
  </div>

  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
      <table class="table">
        <thead class="bg-light">
          <tr>
            <th>会員ID</th>
            <th>名前</th>
            <th>年齢</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </th>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= link_to user.name, admin_user_path(user.id) %></td>
              <td><%= user.age_i18n %></td>
              <td><%= user.email %></td>
              <td>
                <% if user.is_deleted == true %>
              <div class="text-success">有効</div>
            <% elsif %>
              <div class="text-danger">退会</div>
            <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-1"></div>
  </div>
  <div class="row">
    <div class="mx-auto">
      <%#= paginate @customers %>
    </div>
  </div>
</div>