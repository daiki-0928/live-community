<div class="row">
  <% posts.each do |post| %>
    <div class="col-xs-12 col-md-6 col-lg-4 mt-3">
      <div class = "card">
        <div class = "card-body">
          <h5 class = "card-title text_omit">
            <%= link_to post.title,admin_post_path, class: "post_#{post.id}" %>
          </h5>
          <h6 class = "card-subtitle">
            <div>病種：<%= post.genre.name %></div>
            <div>
              <i class="favorite_buttons_<%= post.id %>">
                <% if user_signed_in? %>
                  <%= render "public/favorites/btn", post: post %>
                <% else %>
                  <i class="fas fa-heart" aria-hidden="true"></i>
                  <%= post.favorites.count %>
                <% end %>
              </i>
              <i class="far fa-comment-dots ml-2"></i>
              <%= post.post_comments.count %>
            </div>
          </h6>
        </div>
      </div>
    </div>
  <% end %>
</div>
