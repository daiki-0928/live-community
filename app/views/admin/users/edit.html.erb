<div class="text-center mt-5 mb-5">
  <div class="form-wrapper mb-5">
    <h2 class="form-title mb-5">登録情報編集</h2>

  <%= form_with model: [:admin,@user] do |f| %>
  <%= render 'layouts/error_message', model: f.object %>

    <div class="form-group row">
        <%= f.label "プロフィール画像" %>
        <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
    </div>

    <div class="form-group row">
      <label for="customer_name" class="col-sm-2 col-form-label">名前</label>
      <div class="col-sm-10">
        <%= f.text_field :name, class:"col-4" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="customer_address" class="col-sm-2 col-form-label">年齢</label>
      <div class="col-sm-10">
        <%= f.select :age, User.ages.keys.map {|k| [I18n.t("enums.user.age.#{k}"), k]}, class:"col-7" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="customer_telephone_number" class="col-sm-2 col-form-label">自己紹介</label>
      <div class="col-sm-10">
        <%= f.text_field :introduction, class:"col-5" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="customer_email" class="col-sm-2 col-form-label">メールアドレス</label>
      <div class="col-sm-10">
        <%= f.text_field :email, class:"col-4" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="customer_is_active" class="col-sm-2 col-form-label">会員ステータス</label>
      <div class="col-sm-10 d-flex align-items-center">
        <div class="form-check form-check-inline">
          <%= f.radio_button :is_deleted, "false" %>
          有効
        </div>
        <div class="form-check form-check-inline">
          <%= f.radio_button :is_deleted, "true" %>
          退会
        </div>

       <div class="col-sm-3">
        <%= f.submit '編集内容を保存', class: "btn btn-success" %>
       </div>
    </div>
<% end %>
</div>
</div>
</div>
