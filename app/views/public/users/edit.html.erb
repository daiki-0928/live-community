<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-md-auto mb-3 bg-light">
      <h3>会員情報編集</h3>
    </div>
    <div class="col-md-8">
    </div>
  </div>

  <%= form_with model: @user do |f| %>
  <%= render 'layouts/error_message', model: f.object %>

    <div class="form-group row">
      <label for="customer_name" class="col-sm-2 col-form-label">名前</label>
      <div class="col-sm-10">
        <%= f.text_field :name, class:"col-4" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="customer_address" class="col-sm-2 col-form-label">年齢</label>
      <div class="col-sm-10">
        <%= f.select :age, User.ages.keys.map {|k| [I18n.t("enums.user.age.#{k}"), k]}, class:"col-7" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="customer_telephone_number" class="col-sm-2 col-form-label">自己紹介</label>
      <div class="col-sm-10">
        <%= f.text_field :introduction, class:"col-4" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="customer_email" class="col-sm-2 col-form-label">メールアドレス</label>
      <div class="col-sm-10">
        <%= f.text_field :email, class:"col-4" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-3">
        <%= f.submit '編集内容を保存', class: "btn btn-success" %>
      </div>
      <div class="col-sm-3">
        <%= link_to '退会する', confirm_path, class: "btn btn-danger" %>
      </div>
    </div>
<% end %>

</div>