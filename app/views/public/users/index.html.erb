<div class="text-center mt-5 mb-5">
  <h2 class="form-title mb-5">ユーザー一覧</h2>
  <div class="flame container mt-5 mb-5">
    <div class="form-group">
      <%= search_form_for @q do |f| %>
      <div class="row form-group justify-content-center">
        <div class="search_form col-9 col-md-5 col-xl-4">
          <%= f.search_field :name_cont, placeholder: "ユーザー名検索", class: 'form-control' %>
        </div>
        <div class="form-width col-10 col-md-8 col-xl-6 text-center">
          <%= f.submit "検索", class: "btn btn-success ml-3 mb-1" %>
         </div>
      </div>
    </div>
      <% end %>
    <div class="row search_form">
      <%= sort_link(@q, :created_at, "古い順/新しい順") %>
    </div>

<div class="row">
  <% @users.each do |user| %>
    <div class="col-xs-12 col-md-6 col-lg-4 mt-3">
      <div class = "card">
        <div class = "mt-3">
          <%= link_to (user) do %>
            <%= image_tag user.get_profile_image, size:'150x150', class:"profile_image" %>
          <% end %>
        </div>
        <div class = "card-body">
          <h5 class = "card-title text_omit">
            <%= link_to user.name, user %>
          </h5>
          <h6 class = "card-subtitle mb-1">
            <div>年齢: <%= user.age_i18n %></div>
          </h6>
          <h6 class = "card-subtitle">
            <div>ユーザーID: <%= user.id %></div>
          </h6>
        </div>
      </div>
    </div>
  <% end %>
</div>