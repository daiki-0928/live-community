<div class="text-center mt-5 mb-5">
  <div class="form-wrapper mb-5">
    <h2 class="form-title mb-5">ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

   <div class="form-group row">
     <label for="customer_emal" class="col-sm-3 col-form-label">メールアドレス</label>
     <div class="col-sm-8">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
     </div>
   </div>

   <div class="form-group row">
     <label for="customer_password" class="col-sm-3 col-form-label">パスワード</label>
     <div class="col-sm-8">
      <%= f.password_field :password, autocomplete: "current-password" %>
     </div>
   </div>

   <% if devise_mapping.rememberable? %>
     <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :ログイン状態を保持する %>
     </div>
   <% end %>

   <div class="actions col-mt-3">
    <%= f.submit "ログイン", class: 'btn btn-success btn-block' %>
   </div>
    <% end %>
  </div>

 <div class="row justify-content-center">
    <div class="col-md-auto mb-3 bg-light">
      <h5>まだ登録がお済みでない方</h5>
    <%= render "public/shared/links" %>
    <%= link_to 'ゲストログインする（閲覧用）', users_guest_sign_in_path, method: :post %>
    </div>
 </div>

</div>
